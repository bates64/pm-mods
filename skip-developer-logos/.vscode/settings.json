// https://github.com/nanaian/merlon/blob/main/templates/.vscode/settings.json
{
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "search.exclude": {
        "**/*.i": true,
        "**/build/src": true,
        "ctx.c": true,
        "docs/doxygen": true,
        "expected": true,
        "ver/jp/expected": true,
        "ver/us/expected": true
    },
    "python.autoComplete.extraPaths": [
        "./papermario/tools"
    ],
    "python.analysis.extraPaths": [
        "./papermario/tools",
        "./papermario/tools/build/sprite",
        "./papermario/tools/splat"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.splat_cache": true,
        ".ninja*": true,
        "**/*.i": true,

        // Ignore files irrelevant to modders
        "papermario/.github": true,
        "papermario/.vscode": true,
        "papermario/docs": true,
        "papermario/tools": true,
        "papermario/ver/current": true,
        "papermario/ver/ique": true,
        "papermario/ver/jp": true,
        "papermario/ver/pal": true,
    },
    "C_Cpp.default.cStandard": "c89",
}
